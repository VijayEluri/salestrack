<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/quantityView" android:layout_marginLeft="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">>>>>"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:id="@+id/transitionDirectionView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SalesName"
            android:id="@+id/salesNameView" android:background="#55d8aa" android:autoText="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="дж СИНИЕ"
            android:id="@+id/goodNameView" style="@style/tile" android:layout_marginLeft="10dp"/>
</LinearLayout>